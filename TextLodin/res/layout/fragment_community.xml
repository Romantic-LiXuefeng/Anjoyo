<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="vertical"
    android:weightSum="3" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/custom_height10d"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/custom_height16d"
             >

            <TextView
                android:id="@+id/hot_activities"
                android:layout_width="@dimen/custom_height140d"
                android:layout_height="@dimen/custom_height60d"
                android:background="@drawable/hot_activities"
                android:gravity="center"
                android:paddingLeft="@dimen/custom_height40d"
                android:text="热门活动"
                android:clickable="true"
                android:textColor="@color/grey_black"
                android:textSize="@dimen/custom_height16d" />

            <TextView
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:id="@+id/hot_topic"
                android:layout_width="@dimen/custom_height140d"
                android:layout_height="@dimen/custom_height60d"
                android:background="@drawable/hot_topic"
                android:gravity="center"
                android:paddingLeft="@dimen/custom_height40d"
                android:text="热门话题"
                android:textColor="@color/grey_black"
                android:textSize="@dimen/custom_height16d" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/custom_height16d"
            >

            <TextView
                android:id="@+id/hot_news"
                android:layout_width="@dimen/custom_height140d"
                android:layout_height="@dimen/custom_height60d"
                android:background="@drawable/news" 
                android:text="新闻资讯"
                android:gravity="center"
                android:paddingLeft="@dimen/custom_height40d"
                android:textColor="@color/grey_black"
                android:textSize="@dimen/custom_height16d"/>

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/nearby"
                android:layout_width="@dimen/custom_height140d"
                android:layout_height="@dimen/custom_height60d"
                android:background="@drawable/nearby_people" 
                android:text="附近的人"
                android:textColor="@color/grey_black"
                android:gravity="center"
                android:paddingLeft="@dimen/custom_height40d"
                android:textSize="@dimen/custom_height16d"/>
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:scrollbars="none"
        android:id="@+id/listview_community"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </ListView>

</LinearLayout>