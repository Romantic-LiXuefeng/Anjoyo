<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e2000000"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TvSetting_onback_pressed"
            style="@style/common_Textview_Menu_style"
            android:clickable="true"
            android:drawableTop="@drawable/setting"
            android:text="设置"
            android:textColor="@drawable/selector_fav_tv_color_fragment_main"
            android:textSize="@dimen/custom_height16d" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="@dimen/custom_height65d"
            android:layout_gravity="center"
            android:background="#88444444" />

        <TextView
            android:id="@+id/TvAbout_onback_pressed"
            style="@style/common_Textview_Menu_style"
            android:clickable="true"
            android:drawableTop="@drawable/about"
            android:text="关于"
            android:textColor="@drawable/selector_fav_tv_color_fragment_main"
            android:textSize="@dimen/custom_height16d" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_gravity="center"
        android:background="#ff444444" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e2000000"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TvUpdate_onback_pressed"
            style="@style/common_Textview_Menu_style"
            android:clickable="true"
            android:drawableTop="@drawable/version_updating"
            android:text="版本更新"
            android:textColor="@drawable/selector_fav_tv_color_fragment_main"
            android:textSize="@dimen/custom_height16d" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="@dimen/custom_height65d"
            android:layout_gravity="center"
            android:background="#88444444" />

        <TextView
            android:id="@+id/TvExit_onback_pressed"
            style="@style/common_Textview_Menu_style"
            android:clickable="true"
            android:drawableTop="@drawable/exit"
            android:text="退出"
            android:textColor="@drawable/selector_fav_tv_color_fragment_main"
            android:textSize="@dimen/custom_height16d" />
    </LinearLayout>

</LinearLayout>