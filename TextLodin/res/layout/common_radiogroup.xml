<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mannerger_line"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/detail_layout14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/custom_height10d"
        android:layout_marginTop="@dimen/custom_height6d"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/btn_downloadmanger_fragment_mannerger"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/selector_redeem_btn_download_bg"
            android:button="@null"
            android:gravity="center"
            android:text="下载管理" />

        <RadioButton
            android:id="@+id/btn_mannerger_fragment_mannerger"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_redeem_btn_download_bg"
            android:button="@null"
            android:gravity="center"
            android:text="软件管理" />
    </RadioGroup>

</LinearLayout>