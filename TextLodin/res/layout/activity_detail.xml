<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white" >

    <include
        android:id="@+id/detail_layout"
        layout="@layout/common_title_bar" />

    <LinearLayout
        android:id="@+id/detail_layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_layout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/Iv_icon_activity_detail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/default1"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/Tv_title_activity_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="全民炸翻天"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/Bt_attention_activity_detail1"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/detail_focus_selector"
                    android:text="关注" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RatingBar
                        android:id="@+id/Rb_star_activity_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:maxHeight="11.0dip"
                        android:minHeight="11.0dip"
                        android:numStars="5"
                        android:progressDrawable="@drawable/layer_list_start"
                        android:rating="3.5" />

                    <TextView
                        android:id="@+id/Tv_filesize_activity_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="大小:13.10MB" />

                    <TextView
                        android:id="@+id/Tv_versionname_activity_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="版本:2.71" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/Tv_classname_activity_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:singleLine="true"
                        android:text="分类:棋牌桌游" />

                    <TextView
                        android:id="@+id/Tv_version_activity_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="下载次数:49次" />

                    <TextView
                        android:id="@+id/Tv_newstime_activity_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="更新日期:2014-09-14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/detail_layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_layout1"
        android:scaleType="fitXY"
        android:src="@drawable/ic_detail_divider" />

    <RadioGroup
        android:id="@+id/detail_layout3"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/detail_layout2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/detail_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="详情" />

        <RadioButton
            android:id="@+id/gamedetail_comment"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/detail_selector"
            android:button="@null"
            android:gravity="center"
            android:text="评论" />

        <RadioButton
            android:id="@+id/gamedetail_about"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/detail_selector"
            android:button="@null"
            android:gravity="center"
            android:text="相关" />
    </RadioGroup>

    <ImageView
        android:id="@+id/detail_layout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_layout3"
        android:scaleType="fitXY"
        android:src="@drawable/ic_detail_divider" />

    <LinearLayout
        android:id="@+id/detail_install"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom"
        android:gravity="center_vertical" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/detail_install_selector"
            android:text="安装" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="@null"
        android:layout_above="@id/detail_install"
        android:layout_below="@id/detail_layout4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="@null" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <GridView
                        android:id="@+id/morepic_activity_detail"
                        android:layout_width="488dp"
                        android:layout_height="180dp"
                        android:numColumns="4"
                        android:horizontalSpacing="4dp"
                        android:scrollbars="@null"/>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/flashsay_activity_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="全面炸翻天将打造世界上最具有影响力的" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@drawable/detail_more_selector" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>