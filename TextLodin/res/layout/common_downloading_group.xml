<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="30dp"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="30dp" >

    <RelativeLayout
        android:id="@+id/downloading_head_layout"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/mannerger_line"
        android:gravity="center_vertical"
        android:minHeight="30dp"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/download_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:paddingRight="20dp"
            android:text="正在下载"
            android:textColor="#ff464546"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/group_arrow_down" />

        <TextView
            android:id="@+id/downloading_speed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/group"
            android:layout_toRightOf="@id/download_state"
            android:text="总速度 128K/S"
            android:textColor="#ff7e7e7e"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>