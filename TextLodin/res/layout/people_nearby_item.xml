<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="horizontal">
    
    <ImageView 
        android:id="@+id/iv_head_pic_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/head"
        android:layout_margin="5dp"/>
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <TextView
        android:id="@+id/tv_people_item_name" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chenhu"
        />
    <TextView 
        android:id="@+id/tv_people_item_juli" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="此好友距您："
        android:layout_below="@id/tv_people_item_name"
        />
    <TextView 
         android:id="@+id/tv_people_item_juli_num" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3米"
        android:layout_below="@id/tv_people_item_name"
        android:layout_toRightOf="@id/tv_people_item_juli"
        />
    </RelativeLayout>
    
</LinearLayout>
