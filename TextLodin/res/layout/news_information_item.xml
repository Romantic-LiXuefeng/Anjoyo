<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        
     <ImageView 
         android:id="@+id/iv_news_item_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/news_item_background"/>    
    <Button 
        android:id="@+id/bt_news_item_word"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:background="@drawable/news_item_word"
        android:text="《仙变》耀眼红装"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:layout_alignLeft="@id/iv_news_item_pic"
        android:layout_alignRight="@id/iv_news_item_pic"
        android:layout_alignBottom="@id/iv_news_item_pic"/>
</RelativeLayout>
