<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/shequ_head_pic_item"
        android:layout_width="59dp"
        android:layout_height="82dp"
        android:layout_margin="5dp"
        android:src="@drawable/head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/shequ_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nick" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/shequ_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="2014-4-11 16:04:06"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/shequ_item_activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参加人数：" />

            <TextView
                android:id="@+id/shequ_item_activities_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/shequ_item_activities"
                android:text="cosplay" />

            <TextView
                android:id="@+id/shequ_hot_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/shequ_item_activities_detail"
                android:text="2014-4-11 16:04:06"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>