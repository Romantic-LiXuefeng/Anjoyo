<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="#ECECEC" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:orientation="vertical" >
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/hot_activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hot_activities" 
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/hot_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hot_topic"
                android:layout_toRightOf="@id/hot_activities"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"/>
            <ImageView
                android:id="@+id/hot_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/news" 
                android:layout_below="@id/hot_activities"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nearby_people"
                android:layout_below="@id/hot_topic"
                android:layout_toRightOf="@id/hot_news"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>       
    </LinearLayout>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.75" >
    </ListView>
</LinearLayout>